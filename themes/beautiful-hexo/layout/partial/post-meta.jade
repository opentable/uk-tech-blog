mixin post_meta(author, date, tags)
    if page.author
      p.post-meta!= 'Posted by <a href="/authors/' + page.author + '.html">' + page.author + '</a>, ' + full_date(date, "D MMMM YYYY")
        if tags
          - tags.each(function(tag) {
              = ' · '
              a.tag.post-meta(href=url_for(tag.path))= tag.name
          - })
    else
      p.post-meta Posted on #{full_date(date, "D MMMM YYYY")}
        if tags
          - tags.each(function(tag) {
              = ' · '
              a.tag.post-meta(href=url_for(tag.path))= tag.name
          - })



